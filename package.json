{
  "name": "react-component-library-template",
  "version": "0.0.1",
  "main": "build/index.js",
  "module": "build/index.esm.js",
  "private": true,
  "licence": "",
  "files": [
    "build"
  ],
  "types": "build/index.d.ts",
  "description": "A library of react components",
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,scss,css}": [
      "prettier",
      "stylelint",
      "eslint",
      "typecheck"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "storybook": "start-storybook -p 6006",
    "storybook:export": "build-storybook",
    "prepublishOnly": "yarn build",
    "new:component": "hygen new component",
    "typecheck": "yarn tsc --noEmit -p ./tsconfig.json",
    "prettier": "prettier --write \"src/**/*.{js,ts,tsx,scss,css}\"",
    "prettier:check": "prettier --list-different \"src/**/*.{js,ts,tsx,scss,css}\"",
    "stylelint": "stylelint --fix \"src/**/*.{scss, css}\"",
    "stylelint:check": "stylelint \"src/**/*.{scss, css}\"",
    "eslint": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx src",
    "eslint:check": "eslint --cache --ext .js,.jsx,.ts,.tsx src",
    "commit": "git-cz"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@storybook/react": "^6.0.0",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^11.2.3",
    "@types/jest": "^24.0.24",
    "@types/react": "^16.9.12",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "babel-loader": "^8.1.0",
    "babel-preset-react-app": "^10.0.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.23.0",
    "husky": "^6.0.0",
    "hygen": "^6.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "node-sass": "^5.0.0",
    "prettier": "^2.2.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rollup": "^2.36.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^3.1.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "sass-loader": "^10.1.1",
    "stylelint": "^13.12.0",
    "stylelint-config-recommended": "^4.0.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.19.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
